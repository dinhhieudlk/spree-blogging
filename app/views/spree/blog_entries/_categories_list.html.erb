<% categories = Spree::BlogEntry.visible.tag_counts_on(:categories).sort_by(&:count) %>
<% if categories.present? %>
  <div class="blog_categories_list_wrapper">
    <h4><%= Spree.t('blog.categories') %></h4>
    <ul class="blog_categories_list">
      <% categories.reverse.each do |category| %>
        <li><%= link_to category.name, blog_category_path(category.name) %> (<%= category.count %>)</li>
      <% end %>
    </ul>
  </div>
<% end %>